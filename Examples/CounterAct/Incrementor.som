Incrementor = (

    | counter |
    
    counter: value = ( counter := value )
    
    run = (
      'Incrementor run()' println.
      counter ASYNC_inc.
    )
    
    

    -----

    new: counter = (
        | newIncrementor |
        newIncrementor := super new.
        newIncrementor counter: counter.
        ^newIncrementor
    )

)